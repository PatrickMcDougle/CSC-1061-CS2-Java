    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "request": "launch",
            "name": "Launch Current File Java",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "request": "launch",
            "name": "Launch Current File JavaFX",
            "mainClass": "${file}",
            "vmArgs": ["--module-path", "${env:PATH_TO_FX}", "--add-modules", "javafx.controls,javafx.fxml"]
        }
    ]
}
